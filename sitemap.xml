---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- 1. الصفحات الأساسية (الرئيسية، من نحن، إلخ) -->
  <url>
    <loc>{{ "/" | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  {% for page in site.html_pages %}
    {% if page.permalink and page.url != "/" %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
      </url>
    {% endif %}
  {% endfor %}

  <!-- 2. صفحات تفاصيل العروض (يقرأها من الفهرس الرئيسي) -->
  {% for property in site.data.properties_index %}
    <url>
      <loc>{{ "/property/" | append: property.id | absolute_url }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.9</priority>
    </url>
  {% endfor %}

  <!-- 3. صفحات تفاصيل الطلبات (يقرأها من الفهرس الرئيسي) -->
  {% for request in site.data.requests_index %}
    <url>
      <loc>{{ "/request/" | append: request.id | absolute_url }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.7</priority>
    </url>
  {% endfor %}

</urlset>
